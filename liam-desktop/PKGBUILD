pkgbase=liam-deskptop
pkgname=system-config-nvidia
pkgver=1
pkgrel=1
pkgdesc="Base system configuration for liam-desktop systems"
arch=('any')
url="https://github.com/wils-arch/arch_install"
license=('MIT')
source=('modprobe.d-nvidia.conf')

system-config-nvidia() {
    pkgdesc='nvidia stuff'    
    depends=('liam-base' 'amd-ucode' 'nvidia' 'nvidia-utils' 'lib32-nvidia-utils' 'lib32-libpulse' 'konsole' 'google-chrome')

    install -Dm0644 modprobe.d-nvidia.conf "$pkgdir"/etc/modprobe.d/nvidia.conf
}
