post_install() {
    post_upgrade
}

post_upgrade() {
    ln -sf /usr/share/zoneinfo/Europe/London "/etc/localtime"
    hwclock --systohc
    echo "LANG=en_GB.UTF-8" > /etc/locale.conf
    sed 's/#en_GB/en_GB/' -i /etc/locale.gen
    locale-gen
    touch /home/liam/UCODE.txt
    echo "Add initrd=boot\cpu_manufacturer-ucode.img as first option in the /boot/refind_linux.conf" > /home/liam/UCODE.txt
    systemctl enable networkmanager
    systemctl start networkmanager
}
